  <select id="selectProductByCode" resultMap="BaseResultMap">
    SELECT
      p.`id`,
      p.`brand_id`,
      p.`quantity`,
      p.`market_price`,
      p.`time_to_market`,
      s.`purchase_time`,
      s.`color`,
      s.`size`,
      s.`quantity`
    FROM
      product p
      JOIN product_spec s
        ON p.`id` = s.`product_id`
    WHERE p.`product_code` = #{productCode}
