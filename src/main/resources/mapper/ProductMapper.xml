  <select id="selectProductByCode" resultMap="BaseResultMap">
    SELECT
      p.id,
      p.brand_id,
      p.quantity,
      p.market_price,
      p.product_code,
      p.product_name,
      p.time_to_market,
      s.id AS spec_id,
      s.purchase_time,
      s.color,
      s.size,
      s.quantity AS spec_quantity
    FROM
      product p
      LEFT JOIN product_spec s
        ON p.`id` = s.`product_id`
    WHERE p.`product_code` = #{productCode}
  </select>

  <select id="selectProductStock" resultMap="BaseResultMap">
    SELECT
      pro.id,
      pro.product_name,
      pro.product_code,
      sp.id AS spec_id,
      sp.color,
      sp.size,
      sp.quantity AS spec_quantity,
      st.quantity AS stock_quantity,
      st.warehouse_id,
      st.id AS stock_id
    FROM
      product pro
      JOIN product_spec sp
        ON pro.id = sp.product_id
      JOIN product_warehouse_stock st
        ON sp.id = st.product_spec_id
    WHERE pro.product_code = #{productCode}
  </select>

  <update id="updateMainProduct" parameterType="com.yizhiquan.stockadmin.stockadmin.domain.Product">
    UPDATE
      product
    SET
      product_name = #{productName},
      product_code = #{productCode},
      brand_id = #{brandId},
      time_to_market = #{timeToMarket},
      market_price = #{marketPrice}
    WHERE id = #{id}
